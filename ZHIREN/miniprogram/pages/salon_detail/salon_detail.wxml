<!--miniprogram/pages/salon_detail/salon_detail.wxml-->
<view class='zr_main'>
  <view class='zr_main_thumb'>
    <image src='{{imgUrl}}'></image>
  </view>
  <view class='zr_main_info'>
    <view class='above'>
      <view class='title'>
      {{title}}
      </view>
      <view class='time'>
        <image src='{{imgTab1}}' style='width:30rpx;height:30rpx;'></image>
        <text style='margin-left:20rpx;'>{{time}}</text>
      </view>
      <view class='deadline'>
        <image src='{{imgTab2}}' style='width:30rpx;height:30rpx;'></image>
        <text style='margin-left:20rpx;'>{{deadline}}</text>
      </view>
      <view class='addr'>
        <image src='{{imgTab3}}' style='width:30rpx;height:30rpx;'></image>
        <text style='margin-left:20rpx;'>{{addr}}</text>
      </view>
      <view class='people'>
        <image src='{{imgTab4}}' style='width:30rpx;height:30rpx;'></image>
        <text style='margin-left:20rpx;'>{{people}}</text>
      </view>
      <view class='cost'>
        <image src='{{imgTab5}}' style='width:30rpx;height:30rpx;'></image>
        <text style='margin-left:20rpx;'>{{cost}}</text>
      </view>
    </view>
    <view class='middle'>---------------------------------------------------</view>
    <view class='below'>
      <view class='left'>
        <image src='{{imgJoin1}}' style='width:50rpx;height:50rpx;border-radius: 50%;'></image>
        <image src='{{imgJoin2}}' style='width:50rpx;height:50rpx;border-radius: 50%;margin:0 -15rpx;'></image>
        <image src='{{imgJoin3}}' style='width:50rpx;height:50rpx;border-radius: 50%;'></image>
        <view class='join'>{{join}}人报名</view>
      </view>
      <view class='right'>
        <image src='{{imgHobby1}}' style='width:50rpx;height:50rpx;border-radius: 50%;'></image>
        <image src='{{imgHobby2}}' style='width:50rpx;height:50rpx;border-radius: 50%;margin:0 -15rpx;'></image>
        <image src='{{imgHobby3}}' style='width:50rpx;height:50rpx;border-radius: 50%;'></image>
        <view class='hobby'>{{hobby}}人报名</view>
      </view>
    </view>
  </view>
  <view class='zr_main_detail'>
    <view class='detail'>
      <text>活动详情</text>
    </view>
    <view class='container' style='-webkit-line-clamp: {{lineClamp}}'>
      <text>{{container}}</text>
    </view>
    <view class='openOrClose' bindtap="openOrClose">
      <block wx:if="{{!open}}">
        <text>展开全部</text>
      </block>
      <block wx:else>
        <text>全部收起</text>
      </block>
    </view>
  </view>
  <view class='zr_main_guest'>
    <view class='honor'>
      <text>{{amount}}位嘉宾</text>
    </view>
    <view class='guest'>
      <block wx:if="{{amount==0}}">
        <view>主办方还没有添加嘉宾</view>
      </block>
      <block wx:else>
        <view class='weatherToAdd' bindtap='weatherToAdd'></view>
      </block>
    </view> 
    <view class='sponsorNum'>
      <text>{{num}}个主办方</text>
    </view> 
    <view class='sponsor' style='overflow:hidden;'>
      <view class='photo' style='float:left;margin:25rpx;'>
        <image src='https://ss1.bdstatic.com/70cFvXSh_Q1YnxGkpoWK1HF6hhy/it/u=933705170,2406318035&fm=15&gp=0.jpg' style='width:80rpx;height:80rpx; border-radius: 50%;'></image>
      </view>
      <view class='intro' style='margin:25rpx;float:left;'>
        <view style='margin-left:20rpx;margin-bottom:10rpx;'>{{intro1}}</view>
        <view style='margin-left:20rpx;margin-bottom:20rpx;'>{{intro2}}</view>
      </view>
    </view>
    <view class='imgNow'>现场照片</view> 
    <view class='imgN'>
      <block wx:if="{{imgN==0}}">
        <view>还没有照片</view>
      </block>
      <block wx:else>
        <view class='weatherNeedAdd' bindtap='weatherNeedAdd'></view>
      </block>
    </view>
    <view class='titleNow'>{{titleNow}}篇文章</view>
    <view class='guangzhu'>关注职人设(微信号：Zhirent)第一时间接受文章</view>
  </view>
</view>
